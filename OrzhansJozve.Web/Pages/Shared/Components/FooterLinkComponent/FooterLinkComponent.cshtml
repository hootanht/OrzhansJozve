@model IEnumerable<OrzhansJozve.DomainClass.Domain.FooterLink>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@if (Model.Count() != 0)
{
    <div class="footer-menu-box">
        <ul class="footer-menu-list">
            @foreach (var item in Model.ToList())
            {
                if (item.FooterLinkColumn == 1)
                {
                    <li>
                        <a title="@item.FooterLinkTitle" target="_blank" rel="@item.FooterLinkUrlRel" href="@item.FooterLinkUrl">@item.FooterLinkTitle</a>
                    </li>
                }
            }
        </ul>
        <ul class="footer-menu-list">
            @foreach (var item in Model.ToList())
            {
                if (item.FooterLinkColumn == 2)
                {
                    <li>
                        <a title="@item.FooterLinkTitle" target="_blank" rel="@item.FooterLinkUrlRel" href="@item.FooterLinkUrl">@item.FooterLinkTitle</a>
                    </li>
                }
            }
        </ul>
    </div>
}