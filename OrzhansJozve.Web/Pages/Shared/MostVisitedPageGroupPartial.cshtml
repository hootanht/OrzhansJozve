@{
}
@inject OrzhansJozve.DataLayer.Repositories.IPageGroupRepository _pageGroupService

    <div class="widget widget-category bg-white">
        <div class="heading-layout5">
            <h3 title="محبوب ترین دسته ها">محبوب ترین دسته ها</h3>
        </div>
        <ul class="category-list">
            @foreach (var item in _pageGroupService.SelectAllFromTop(3).ToList())
            {
                <li><a title="@item.PageGroupTitle" asp-page="Index" asp-page-handler="PageGroup" asp-route-query="@item.PageGroupTitle" asp-route-pageId=""><i class="fas fa-caret-right"></i>@item.PageGroupTitle</a></li>
            }
        </ul>
    </div>