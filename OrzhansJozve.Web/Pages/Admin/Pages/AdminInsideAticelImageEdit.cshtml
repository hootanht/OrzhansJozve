@page "/admin/editinsideaticelimage/{id}"
@model AdminInsideAticelImageEditModel
@{
    ViewData["Title"] = "ویرایش عکس";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<!-- Edit InsideAticelImage -->
<section class="last-news-section border-radius">
    <header><i class="fa fa-book adminicon"></i>  <h3>ویرایش عکس</h3> </header>
    <ul>
        <li>
            <form method="post" enctype="multipart/form-data" class="form-group" id="AddNewAds">
                <label asp-for="InsideAticelImageModel.InsideAticelImageTitle"></label>
                <input asp-for="InsideAticelImageModel.InsideAticelImageTitle" class="form-control" />
                <span asp-validation-for="InsideAticelImageModel.InsideAticelImageTitle" class="text-danger displayblock"></span>
                <label asp-for="InsideAticelImageModel.InsideAticelImageName" class="margin-top-20"></label>
                @if (Model.InsideAticelImageModel.InsideAticelImageName != null)
                {
                    <div class="admin-edit-pic-div"><img src="~/Blog-Content/InsideAticelImages/@Model.InsideAticelImageModel.InsideAticelImageName" loading="lazy" class="border-radius admin-edit-pic-img admin-mobile-image admin-author-edit-img boxshadow" /></div>
                }
                <input type="file" name="insideAticelImage" class="form-control" />
                <span asp-validation-for="InsideAticelImageModel.InsideAticelImageName" class="text-danger displayblock"></span>
                <div class="row margin-top-20 centertext">
                    <div class="col-xs-12 col-md-12"><button asp-page-handler="EditInsideAticelImage" name="AddNewArticel" value="AddNewArticel" type="submit" class="bgwarning actionIcon articelactionicon"> <i class="fa fa-edit actionIcon2"></i>ویرایش شود</button></div>
                </div>
            </form>
        </li>
    </ul>
</section>
<!-- End InsideAticelImage -->
