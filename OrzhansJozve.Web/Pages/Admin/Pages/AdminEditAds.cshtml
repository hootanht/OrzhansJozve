@page "/admin/editads/{id}"
@model AdminEditAdsModel
@{
    ViewData["Title"] = "ویرایش تبلیغ";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<!-- EditAdds -->
<section class="last-news-section border-radius">
    <header><i class="fa fa-book adminicon"></i>  <h3>ویرایش تبلیغ</h3> </header>
    <ul>
        <li>
            <form method="post" enctype="multipart/form-data" class="form-group" id="AddNewAds">
                <label asp-for="AdsModel.AdsTitle"></label>
                <input asp-for="AdsModel.AdsTitle" class="form-control" />
                <span asp-validation-for="AdsModel.AdsTitle" class="text-danger displayblock"></span>
                <label asp-for="AdsModel.AdsImageName" class="margin-top-20"></label>
                @if (Model.AdsModel.AdsImageName != null)
                {
                    <div class="admin-edit-pic-div"><img src="~/Blog-Content/Ads-Images/@Model.AdsModel.AdsImageName" loading="lazy" class="border-radius admin-edit-pic-img admin-mobile-image admin-author-edit-img boxshadow" /></div>
                }
                <input type="file" name="adsImage" class="form-control" />
                <span asp-validation-for="AdsModel.AdsImageName" class="text-danger displayblock"></span>
                <label asp-for="AdsModel.AdsUrl" class="margin-top-20"></label>
                <input asp-for="AdsModel.AdsUrl" class="form-control" />
                <span asp-validation-for="AdsModel.AdsUrl" class="text-danger displayblock"></span>
                <label asp-for="AdsModel.AdsRow" class="margin-top-20"></label>
                <input asp-for="AdsModel.AdsRow" class="form-control" />
                <span asp-validation-for="AdsModel.AdsRow" class="text-danger displayblock"></span>
                <label asp-for="AdsModel.TopAds" class="margin-top-20"></label>
                <select name="isTop" class="form-control increaseheigh">
                    @if (Model.AdsModel.TopAds)
                    {
                        <option value="true">بالای صفحه</option>
                        <option value="false">پایین صفحه</option>
                    }
                    else
                    {
                        <option value="false">پایین صفحه</option>
                        <option value="true">بالای صفحه</option>
                    }
                </select>
                <span asp-validation-for="AdsModel.TopAds" class="text-danger displayblock"></span>
                <div class="row margin-top-20 centertext">
                    <div class="col-xs-12 col-md-12"><button asp-page-handler="EditAdds" type="submit" class="bggreen actionIcon articelactionicon"> <i class="fa fa-check actionIcon2"></i>منتشر شود</button></div>
                </div>
            </form>
        </li>
    </ul>
</section>
<!-- End EditAdds -->
